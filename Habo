-- Elite Instant Steal V2 (No External Links - Internal UI)
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local EnableBtn = Instance.new("TextButton")
local TPBtn = Instance.new("TextButton")
local SpeedSlider = Instance.new("TextButton")

-- UI Styling (Black & Red Style)
ScreenGui.Parent = game.CoreGui
MainFrame.Name = "EliteMenu"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
MainFrame.BorderSizePixel = 2
MainFrame.BorderColor3 = Color3.fromRGB(200, 0, 0)
MainFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
MainFrame.Size = UDim2.new(0, 220, 0, 280)
MainFrame.Active = true
MainFrame.Draggable = true

Title.Parent = MainFrame
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
Title.Text = "INSTANT STEAL V2"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.TextSize = 18

_G.StealActive = false

-- 1. Enable Button (TP + Carpet + Instant Grab)
EnableBtn.Parent = MainFrame
EnableBtn.Position = UDim2.new(0.1, 0, 0.25, 0)
EnableBtn.Size = UDim2.new(0.8, 0, 0, 45)
EnableBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
EnableBtn.Text = "Enable Steal"
EnableBtn.TextColor3 = Color3.new(1, 1, 1)

local function CreateCarpet()
    local c = Instance.new("Part", workspace)
    c.Size = Vector3.new(15, 1, 15)
    c.Anchored = true
    c.Color = Color3.fromRGB(200, 0, 0)
    c.Transparency = 0.6
    return c
end

EnableBtn.MouseButton1Click:Connect(function()
    _G.StealActive = not _G.StealActive
    EnableBtn.Text = _G.StealActive and "Steal: ON" or "Steal: OFF"
    EnableBtn.BackgroundColor3 = _G.StealActive and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(30, 30, 30)
    
    if _G.StealActive then
        local carpet = CreateCarpet()
        task.spawn(function()
            while _G.StealActive do
                task.wait(0.1)
                pcall(function()
                    local hrp = game.Players.LocalPlayer.Character.HumanoidRootPart
                    local base = workspace:FindFirstChild("Base 1") or workspace:FindFirstChild("Base 2")
                    
                    if base then
                        -- Auto TP to center
                        hrp.CFrame = base:GetModelCFrame() * CFrame.new(0, 2, 0)
                        carpet.CFrame = hrp.CFrame * CFrame.new(0, -3.2, 0)
                        
                        -- High Precision Grab 0.1
                        for _, item in pairs(base:GetDescendants()) do
                            if item:IsA("ProximityPrompt") then
                                local pName = item.Parent.Name:lower()
                                if not pName:find("buy") and (pName:find("brainrot") or item.ObjectText:lower():find("brainrot")) then
                                    fireproximityprompt(item)
                                end
                            end
                        end
                    end
                end)
            end
            carpet:Destroy()
        end)
    end
end)

-- 2. Teleport Only Button
TPBtn.Parent = MainFrame
TPBtn.Position = UDim2.new(0.1, 0, 0.5, 0)
TPBtn.Size = UDim2.new(0.8, 0, 0, 45)
TPBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
TPBtn.Text = "Teleport Base"
TPBtn.TextColor3 = Color3.new(1, 1, 1)

TPBtn.MouseButton1Click:Connect(function()
    local b1 = workspace:FindFirstChild("Base 1")
    if b1 then game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = b1:GetModelCFrame() end
end)

-- 3. Close Button
local Close = Instance.new("TextButton", MainFrame)
Close.Size = UDim2.new(0, 30, 0, 30)
Close.Position = UDim2.new(0.85, 0, 0, 5)
Close.Text = "X"
Close.BackgroundColor3 = Color3.new(1, 0, 0)
Close.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)
